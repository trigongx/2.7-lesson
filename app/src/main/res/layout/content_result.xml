<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_result">

    <fragment
        android:id="@+id/nav_host_fragment_content_result"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:defaultNavHost="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navGraph="@navigation/mobile_navigation2" />

    <TextView
        android:id="@+id/tv_policies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Policies"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="120dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/asfalt"
        />
    <Button
        android:textColor="@color/asfalt"
        android:id="@+id/btn_policy"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/tv_policies"
        app:layout_constraintStart_toStartOf="@id/tv_policies"
        app:layout_constraintEnd_toEndOf="@id/tv_policies"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:text="Policy"
        android:background="@drawable/bg_btn_policies"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:drawableRight="@drawable/ic_right_arrow"/>
    <Button
        android:textColor="@color/asfalt"
        android:id="@+id/btn_product_category"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/btn_policy"
        app:layout_constraintStart_toStartOf="@id/btn_policy"
        app:layout_constraintEnd_toEndOf="@id/btn_policy"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:text="Product Category"
        android:background="@drawable/bg_btn_policies"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:drawableRight="@drawable/ic_right_arrow"/>
    <Button
        android:id="@+id/btn_origin_country"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/btn_product_category"
        app:layout_constraintStart_toStartOf="@id/btn_product_category"
        app:layout_constraintEnd_toEndOf="@id/btn_product_category"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:text="Origin Country"
        android:background="@drawable/bg_btn_policies"
        android:textSize="16sp"
        android:textColor="@color/asfalt"
        android:gravity="center_vertical"
        android:drawableRight="@drawable/ic_right_arrow"/>
    <Button
        android:textColor="@color/asfalt"
        android:id="@+id/btn_brand"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/btn_origin_country"
        app:layout_constraintStart_toStartOf="@id/btn_origin_country"
        app:layout_constraintEnd_toEndOf="@id/btn_origin_country"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:text="Brand"
        android:background="@drawable/bg_btn_policies"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:drawableRight="@drawable/ic_right_arrow"/>
    <TextView
        android:id="@+id/tv_current_policies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Policies"
        app:layout_constraintTop_toBottomOf="@id/btn_brand"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/asfalt"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/export"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_current_policies"
        app:layout_constraintStart_toStartOf="@id/tv_current_policies"
        app:layout_constraintEnd_toEndOf="@id/tv_current_policies"
        app:cornerRadius="15dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/red"
        android:text="Export as CSV"/>

</androidx.constraintlayout.widget.ConstraintLayout>