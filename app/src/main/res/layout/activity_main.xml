<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/upper_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/lower_container"
        android:layout_marginHorizontal="22dp">
        <TextView
            app:layout_constraintEnd_toEndOf="@id/upper_container"
            app:layout_constraintBottom_toBottomOf="@id/upper_container"
            android:textColor="@color/white"
            android:id="@+id/tv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="80sp"
            android:text="0"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="20dp"/>
        <Button
            android:id="@+id/btn_see_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/tv_result"
            app:layout_constraintEnd_toEndOf="@id/tv_result"
            android:text="See result"
            android:backgroundTint="@color/gray"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lower_container"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="12dp"
            android:layout_marginBottom="10dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_ac"
                style="@style/Gray.Button"
                android:onClick="onOperationClick"
                android:text="AC" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_erase"
                android:onClick="onOperationClick"
                android:layout_marginHorizontal="12dp"
                style="@style/Gray.Button"
                android:text="く"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_percent"
                android:layout_marginEnd="12dp"
                style="@style/Gray.Button"
                android:text="%"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_division"
                android:onClick="onOperationClick"
                style="@style/Orange.Button"
                android:text="÷"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="12dp"
            android:layout_marginBottom="10dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_7"
                android:onClick="onNumberClick"
                style="@style/Dark.Button"
                android:text="7" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_8"
                android:onClick="onNumberClick"
                android:layout_marginHorizontal="12dp"
                style="@style/Dark.Button"
                android:text="8"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_9"
                android:onClick="onNumberClick"
                android:layout_marginEnd="12dp"
                style="@style/Dark.Button"
                android:text="9"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_multiply"
                style="@style/Orange.Button"
                android:onClick="onOperationClick"
                android:text="×"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="12dp"
            android:layout_marginBottom="10dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_4"
                android:onClick="onNumberClick"
                style="@style/Dark.Button"
                android:text="4" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_5"
                android:onClick="onNumberClick"
                android:layout_marginHorizontal="12dp"
                style="@style/Dark.Button"
                android:text="5"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_6"
                android:onClick="onNumberClick"
                android:layout_marginEnd="12dp"
                style="@style/Dark.Button"
                android:text="6"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_minus"
                style="@style/Orange.Button"
                android:onClick="onOperationClick"
                android:text="-"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="12dp"
            android:layout_marginBottom="10dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_1"
                android:onClick="onNumberClick"
                style="@style/Dark.Button"
                android:text="1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_2"
                android:onClick="onNumberClick"
                android:layout_marginHorizontal="12dp"
                style="@style/Dark.Button"
                android:text="2"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_3"
                android:onClick="onNumberClick"
                android:layout_marginEnd="12dp"
                style="@style/Dark.Button"
                android:text="3"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_plus"
                style="@style/Orange.Button"
                android:onClick="onOperationClick"
                android:text="+"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="12dp"
            android:layout_marginBottom="10dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_0"
                android:onClick="onNumberClick"
                style="@style/Dark.Button"
                android:layout_width="175dp"
                android:layout_marginEnd="12dp"
                android:paddingEnd="110dp"
                android:text="0" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_dot"
                android:layout_marginEnd="12dp"
                style="@style/Dark.Button"
                android:text="."
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_equal"
                style="@style/Orange.Button"
                android:onClick="onOperationClick"
                android:text="="
                />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>